@model IEnumerable<ERP.Models.VendorBank>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@{
    ViewBag.Title = "Index";
}
<p style="padding-left:5px; padding-top:5px;">
    @Html.ActionLink("Create New", "Create",
          null, new { @style = "color:#ffffff;", id = "lnkCreate", @class = "btn btn-success" })
</p>
<div class="panel panel-primary panel-bordered">
    <div class="panel-heading">
        <h5 class="panel-title">List Of Vendor Banks</h5>
    </div>
    <div class="panel-body">
        <table class="table datatable-show-all table-hover table-xs">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Bank Name</th>
                    <th>Account Name</th>
                    <th>Account No</th>
                    <th>Branch</th>
                    <th>Swift Code</th>
                    <th>Routing No</th>
                    <th>Branch COde</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserMas.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bank.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AccountNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                    <td>@Html.DisplayFor(modelItem => item.SwiftCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoutingNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.BranchCode)</td>

                    <td>
                        <ul class="icons-list">
                            <li class="text-info"><a href="@Url.Action("Edit", new { id = item.Id } )" data-popup="tooltip" title="Edit"><i class="icon-pencil7"></i></a></li>
                            <li>|</li>
                            <li class="text-info"><a href="@Url.Action("Details", new { id = item.Id } )" data-popup="tooltip" title="Details"><i class="icon-file-text2"></i></a></li>
                            <li>|</li>
                            <li class="text-danger"><a href="@Url.Action("Delete", new { id = item.Id } )" data-popup="tooltip" title="Delete"><i class="icon-cross2"></i></a></li>
                        </ul>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/plugins/forms/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Scripts/datatables_advanced.js"></script>
}




