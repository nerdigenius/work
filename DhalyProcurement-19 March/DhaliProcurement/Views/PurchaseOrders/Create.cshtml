                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    @*<td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>*@
                                    <td colspan="6" style="text-align:right;"><b>Total Cost</b></td>
