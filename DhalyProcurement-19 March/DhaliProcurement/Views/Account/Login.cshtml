@model DhaliProcurement.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Project Procurement System</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")
    <link href="~/Content/icomoon/styles.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/cupertino/jquery-ui.css" rel="stylesheet" />
    @*<script src="/Scripts/jquery.validate.js"></script>
        <script src="/Scripts/jquery.validate.unobtrusive.js"></script>*@

    <style>
        .modal-backdrop {
            z-index: -1;
        }
    </style>

</head>
<body class="login-container">
    <!-- Main navbar -->
    <div class="navbar navbar-inverse">

        <div class="navbar-header">
            <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="~/Content/images/Dhaly Group.png" alt=""></a>

        </div>

    </div>
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main content -->
            <div class="content-wrapper">
                <!-- Content area -->
                <div class="content" id="content">
                    <!-- Simple login form -->

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="panel panel-body login-form">
                            <div class="text-center">
                                <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
                                <h5 class="content-group">Login to your account <small class="display-block">Enter your credentials below</small></h5>
                            </div>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group has-feedback has-feedback-left">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username" })
                                <div class="form-control-feedback">
                                    <i class="icon-user text-muted"></i>
                                </div>
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group has-feedback has-feedback-left">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Sign in <i class="icon-circle-right2 position-right"></i></button>
                            </div>


                        </div>
                    }
                    <!-- /simple login form -->
                    <!-- Footer -->
                    <div class="footer text-muted">
                        &copy; @DateTime.Now.Year <a href="#">Dhaly Procurement System</a> by <a href="#" target="_blank">Convince Computer Ltd.</a>
                    </div>


                    <!-- /footer -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
    <!-- /page container -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/limitless")





    <script>



        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>


    @Scripts.Render("~/bundles/jqueryval")


</body>
</html>
