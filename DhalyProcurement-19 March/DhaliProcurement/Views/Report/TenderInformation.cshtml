
@{
    ViewBag.Title = "Tender Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10">
        <!-- Basic layout-->
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><i class="icon-stack-plus position-left"></i>Tender Information Report</h5><hr />
                <div class="heading-elements">
                    <ul class="icons-list">
                        <li><a data-action="collapse"></a></li>
                    </ul>
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("TenderInformation", "Report", FormMethod.Post, htmlAttributes: new { @target = "_blank" }))
                {
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--New-->                        
                            @*<div class="form-group">
                                @Html.Label("Project", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("ProjectId", null, "--Select--", new { @class = "form-control select2", @Id = "ProjectId" })
                                </div>
                            </div>*@  

                            @*<div class="form-group">
                                @Html.Label("Site", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("SiteId", null, "--Select--", new { @class = "form-control select2", @Id = "SiteId" })
                                </div>
                            </div>*@   
                            
                            <div class="form-group">
                                @Html.Label("Tender No", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("TenderId", null, "--Select--", new { @class = "form-control select2", @Id = "TenderId" })

                                </div>
                            </div>  
                            
                            <div class="form-group">
                                @Html.Label("FromDate", "Date From", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBox("DateFrom", null, new { @class = "form-control datepicker"})
                                </div>
                            </div>  

                            <div class="form-group">
                                @Html.Label("ToDate", "Date To", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBox("DateTo", null, new { @class = "form-control datepicker" })
                                </div>
                            </div> 
                            <div class="form-group">
                                @Html.Label("Status", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @*<select name="Status" id="Status" clas="form-control select2">
                                        <option value="" selected>--Select Option--</option>
                                        <option value="A">Approved</option>
                                        <option value="N">Pending</option>
                                    </select>*@
                                    @Html.DropDownList("Status", new List<SelectListItem>
                                    {
                                      new SelectListItem{ Text="--Select--", Value = "" },
                                      new SelectListItem{ Text="Approved", Value = "A" },
                                      new SelectListItem{ Text="Pending", Value = "N" },
                                   }, new { @class = "form-control select2", @Id = "Status" })
                                </div>
                              </div>


                            </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            <button type="submit" class="btn btn-primary"><i class="icon-add position-left"></i>  Generate Report</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Plugins/select2/select2.min.js"></script>
    <script>
        $(".select2").select2();
    </script>
    
}





